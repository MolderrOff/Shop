@model List<Shop.Domain.Entity.Product>
@{
    ViewBag.Title = "title";
    Layout = "_Layout";
}

<table class="table-bordered">
    <tr>
        <th>Id</th>
        <th>NameProduct</th>
        <th>IdNameCategory</th>
    </tr>

   @foreach (var product in Model)
    {
    <tr>
        <td>@product.Id</td>
        <td>@product.NameProduct</td>
        <td>@product.IdNameCategory</td>
    </tr>
    }
</table>


